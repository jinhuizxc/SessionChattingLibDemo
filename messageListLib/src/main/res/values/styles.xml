<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--=========================================== 公共样式 =====================================-->

    <!-- 日期样式 -->
    <style name="msgitem_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!--文本内容样式 ：-->
    <style name="msgitem_msg_txt_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">15sp</item>

        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>


    <!--===========================================发送者样式=====================================-->

    <!--发送者  item样式-->
    <style name="msgitem_send_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--发送者  名称样式-->
    <style name="msgitem_sender_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <!--发送者  头像样式-->
    <style name="msgitem_sender_avatar_style">
        <item name="android:layout_width">@dimen/aurora_width_msg_avatar</item>
        <item name="android:layout_height">@dimen/aurora_height_msg_avatar</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>


    <!--============================================分割线==============================================-->

    <!--聊天对方  item样式-->
    <style name="msgitem_receive_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- 聊天对方 头像样式-->
    <style name="msgitem_receiver_avatar_style">
        <item name="android:layout_width">@dimen/aurora_width_msg_avatar</item>
        <item name="android:layout_height">@dimen/aurora_height_msg_avatar</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>


    <!-- 聊天对方  姓名样式-->
    <style name="msgitem_receiver_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:visibility">visible</item>
    </style>


</resources>